{
  "name": "OWA Indicator",
  "version": "0.1",
  "manifest_version": 2,
  "description": "Show unread e-mail indicator in OWA email",
  "icons": { "128": "icons/icon_128.png" },
  "background": {
    "persistent": false,
    "scripts": ["scripts/bg.js"]
  },
  "permissions" : [
    "alarms",
    "notifications"
  ],
  "content_scripts": [
    {
      "matches": ["https://exchange.tripadvisor.com/owa/*"],
      "js": ["scripts/cs.js"]
    }
  ],
  "browser_action": {
    "default_title": "",
    "default_icon": "icons/icon_128_red.png",
    "default_popup": "popup.html"
  }
}
