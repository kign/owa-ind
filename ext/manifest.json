{
  "name": "Outlook Web Access Unread counter",
  "version": "0.2",
  "manifest_version": 2,
  "description": "Show unread e-mail indicator in OWA email",
  "icons": { "128": "icons/icon_128.png" },
  "background": {
    "persistent": false,
    "scripts": ["scripts/bg.js"]
  },
  "permissions" : [
    "alarms",
    "notifications",
    "activeTab",
    "storage"
  ],
  "options_ui": {
    "page": "html/options.html",
    "chrome_style": true,
    "open_in_tab": false
  },
  "browser_action": {
    "default_title": "Initializing",
    "default_icon": "icons/icon_128_red.png",
    "default_popup": "popup.html"
  }
}
